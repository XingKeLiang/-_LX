/* pages/courses/courses.wxss */
.body{
  width: 100%;
  background: #efefef;
}
.food-cate{
  text-align: center;
  font-size: 40rpx;
  font-weight: 900;
  padding: 20rpx;
}
.food-content{
  display:flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.food-item{
  width: 30%;
  border-radius: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.food-item image{
  width: 100%;
  height: 200rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx; 
}
.food-name{
  margin: 30rpx 10rpx 10rpx;
  font-weight: 700;
}
.food-price{
  margin: 0 0 5rpx 10 rpx;
  color: red;
}